# ============================================
# My Dev Brain - 환경 변수 템플릿
# ============================================
# 이 파일을 복사하여 .env 파일로 사용하세요:
#   cp .env.example .env
# ============================================

# 데이터베이스 (PostgreSQL)
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=your_secure_password_here
DB_NAME=dev_brain

# Google Gemini API
# https://aistudio.google.com/app/apikey 에서 발급
GOOGLE_API_KEY=your_gemini_api_key_here

# GitHub 연동 (Collector용)
# https://github.com/settings/tokens 에서 발급
# Private 레포 접근 시 'repo' 권한 필요
GITHUB_TOKEN=ghp_your_github_token_here

# GitHub 동기화 설정
GITHUB_SYNC_MODE=repos
GITHUB_REPOS=owner/repo1,owner/repo2

# Gateway 설정 (선택)
GATEWAY_PORT=8080
BACKEND_URL=http://localhost:8081

# Redis 설정 (선택)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Rate Limiter (선택)
RATE_LIMIT=10
RATE_BURST=20

# 캐시 설정 (선택)
CACHE_ENABLED=true
CACHE_TTL=3600

# Collector 설정 (선택)
CHUNK_SIZE=1000
CHUNK_OVERLAP=200
